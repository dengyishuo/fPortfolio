citHeader("To cite fPortfolio in publications use:")

citEntry(entry  = "book",
         title  = "Portfolio Optimization with R/Rmetrics",
         author = "Diethelm Wuertz, Yohan Chalabi, William Chen and Andrew Ellis",	
	 year   = "2010",	   
	 month  = "April", 
	 editor = "Wuertz, Diethelm and Hanf, Martin",
	 publisher = "Rmetrics Association & Finance Online, www.rmetrics.org",
         note   = paste("R package version", meta$Version),
         textVersion = paste("D. Wuertz, Y. Chalabi, W. Chen and A. Ellis",
                             "(2010),",
                             "Portfolio Optimization with R/Rmetrics")
)
